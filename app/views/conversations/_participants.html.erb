<% outputted_yourself = false %>
<% conversation.participants.each do |participant| %>
	<% if participant != current_user %>
		<%= gravatar_for participant %>
 		<%= participant.name %>
 	<% end %>
 	<% if !outputted_yourself && (participant == current_user) %>
 		<%= gravatar_for participant %>
 		yourself
 		<% outputted_yourself = true %>
 	<% end %>
<% end %>