<li class="list-group-item clearfix">
  <h4><%= link_to conversation.subject, conversation_path(conversation) %>

  <span class="btn-group-vertical pull-right">
    <% if conversation.is_trashed?(current_user) %>
      <%= link_to 'Restore', restore_conversation_path(conversation), class: 'btn btn-sm btn-info', method: :post %>
    <% else %>
      <%= link_to 'Move to trash', conversation_path(conversation), class: 'btn btn-sm btn-danger', method: :delete,
                  data: {confirm: 'Are you sure?'} %>     
    <% end %>
  </span>
  </h4>

  <p><%= render 'conversations/participants', conversation: conversation %></p>

  <p><%= conversation.last_message.body %>
    <small>(<span class="text-muted"><%= conversation.last_message.created_at.strftime("%-d %B %Y, %H:%M:%S") %></span>)</small></p>
</li>