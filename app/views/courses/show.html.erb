<section id="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading"><%= @course.name %></h2>
                <h3 class="section-subheading text-muted">[insert text here]</h3>
            </div>
        </div>

        <ul class="tabs">
            <li class="selected"><a href="#view1">Info</a></li>
            <li><a href="#view2">Videos</a></li>
            <li><a href="#view3">Documents</a></li>
        </ul>
        <div class="tabcontents">
            <div id="view1">
                <div class="row">
                	<div class="col-md-1">
                	</div>
                	<div class="col-md-10">
                		<h2>Course Info</h2>
                		<p><strong>Category: </strong> <%= @course.category %></p>
                		<p><strong>Grade: </strong> <%= @course.grade %></p>
                		<p><strong>Description: </strong><%= @course.description %></p>
                	</div>
                	<div class="col-md-1">
                	</div>
                </div>
            </div>
            <div id="view2">
                <div class="row">
                	<h2>Course Videos</h2>

                	<% if can_create_video? %>
                		<%= link_to 'New Video', new_course_video_path(@course, @video) %>
                	<% end %>

                	<br>

                	<% if @course.videos.any? %>
                		<%= render @course.videos %>
                	<% else %>	
                		<p>This course has no videos.</p>
                	<% end %>
                </div>
            </div>
            <div id="view3">
                <div class="row">
                	<h2>Course Documents</h2>
                </div>
            </div>
        </div>
        <br>
        <%= link_to 'Back', courses_path %>

        <% if can_edit_course? %>
        	| <%= link_to 'Edit Course', edit_course_path(@course) %>
        <% end %>

        <% if can_delete_course? %>
        	| <%= link_to 'Delete Course', course_path(@course), method: :delete, data: { confirm: 'Are you sure you want to delete this course?' } %>
        <% end %>
    </div>
</section>
