<div class = "header">
	<h1>
		<%= @course.name %>
	</h1>

	<p><%= @course.description %></p>

	<p id="notice"><%= notice %></p>

	<%= link_to 'Edit', edit_course_path(@course) %> |
	<%= link_to 'Back', courses_path %> |
	<%= link_to 'Delete', course_path(@course), 
		method: :delete,
		data: { confirm: 'Are you sure you want to delete this course?' } %>
</div>